<section>
    <div class="container">
        <div class="row">
            
            {{> sidebar}}

            <div class="col-sm-9 padding-right">        
                <div class="features_items">
                    <h2 class="title text-center">Featured Items</h2>
                    
                    {{#each products}}
                         {{DescArtigo}} - {{pvp1}} <br/>
                    {{/each}} 
                    
                    <hr/>
                    
                    {{#if search.q}}
                        <i> Filtering by keyword/s: {{search.q}} </i> <br/>
                    {{/if}}
                    
                    {{#if search.min}}
                        <i> Filtering by min: {{search.min}} </i> <br/>
                    {{/if}}
                    
                    {{#if search.max}}
                        <i> Filtering by max: {{search.max}} </i> <br/>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</section>